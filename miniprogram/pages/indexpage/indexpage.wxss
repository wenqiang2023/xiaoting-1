/* pages/indexpage/indexpage.wxss */
.activities{
  border: solid black 1px;
}

.img{
  width: 100%;
  height: 100%;
}
.userInfo{
  padding: 20px;
}
.userName{
  height:30px;
  line-height: 30px;
  text-align: center;
  margin-top: 10px;
}
.avatar{
   width: 50px;
   height:50px;
   padding: 0 0;
}
.avatar_img{
  width: 100%;
  height:100%;
}
.item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 20%;
}

.itemBox{
  background-color: white;
  border-radius: 2%;
  margin: 2%;
}

.itemBoxCostum{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 3%;
}

.itemBoxManager{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 3%;
}
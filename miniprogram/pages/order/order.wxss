/* pages/mainpage/mainpage.wxss */
page {
  height: 100%;
}

.top {
  position: relative;
  top: 0;
  width: 100%;
}

.mid {
  flex: 1;
  overflow: scroll;
  margin-bottom: 82px;
}

.bottom {
  position: relative;
  bottom: 0;
  width: 100%;
}

.topContent {
  display: flex;
  flex-direction: column;
}

.bottomContent {
  display: flex;
  flex-direction: column-reverse;
}

.search {
  position: relative;
}

.item {
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
  justify-content: space-between;
}

.cloth {
  width: 80%;
}

.manage {
  width: 100%;
}

.choose {
  height: max-content;
  justify-content: center;
}

.van-card-full .van-card {
  background-color: white;
}

.desc-class {
  white-space: pre-wrap;
}
.van-swipe-cell__right{
  background-color: red;
  color: #ffffff;
  width: 65px;
  text-align: center;
  line-height: 0px;
}
.van-card{
  background-color: #ffffff !important;
  min-height:120px;
}
.head_p{
  background-color: #ffffff;
  padding: 10px 10px 0 10px;
}
.head_button{
  float: right;
}
.head_text{
  font-size: 12px;
}
.head_name{
  line-height: 40px;
}
.user_img{
  width:40px;
  height:40px;
}
.user_list{
  margin: 10px;
  border-radius: 5px;
}
